@page "/calculator"

<h2>Simple Calculator</h2>

<div class="mb-2">
    <input type="number" @bind="Num1" placeholder="Enter first number" class="form-control" />
</div>
<div class="mb-2">
    <input type="number" @bind="Num2" placeholder="Enter second number" class="form-control" />
</div>

<div class="mb-2">
    <button class="btn btn-primary me-2" @onclick="Add">Add</button>
    <button class="btn btn-primary me-2" @onclick="Subtract">Subtract</button>
    <button class="btn btn-primary me-2" @onclick="Multiply">Multiply</button>
    <button class="btn btn-primary me-2" @onclick="Divide">Divide</button>
</div>

<h3>Result: @Result</h3>

@* @code {
    // Two-way bound numbers
    private double num1;
    private double num2;

    // Result of calculation
    private double result;

    // Event handlers
    private void Add()
    {
        result = num1 + num2;
    }

    private void Subtract()
    {
        result = num1 - num2;
    }

    private void Multiply()
    {
        result = num1 * num2;
    }

    private void Divide()
    {
        if (num2 != 0)
            result = num1 / num2;
        else
            result = double.NaN; // or show an error
    } 
} *@